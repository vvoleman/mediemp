{% extends "base.html.twig" %}
{% block title %}Profil - {{ parent() }} {% endblock %}
{% block body %}
    <div class="d-lg-flex justify-content-around col-lg-11 mx-auto">
        <div class="col-lg-2">
            <div class="photo-box" style="background-image: url('https://i.redd.it/s6zoxmbnq4b61.jpg')"></div>

            <div class="m-top">
                <a href="">
                    <button class="profile_button w-100 separator">Upravit</button>
                </a>
            </div>
        </div>
        <div class="col-lg-9 d-lg-flex justify-content-between">
            <div class="col-lg-12">
                <div class="separator">Osobní údaje</div>
                <div class="d-lg-flex flex-wrap justify-content-center">
                    <div class="info-frame col-lg-3">{{ user.name }}</div>
                    <div class="info-frame col-lg-3">{{ user.surname }}</div>
                    <div class="info-frame col-lg-3">{{ user.degree }}</div>
                    <div class="info-frame col-lg-3">{{ user.birthday|date('d. m. Y') }}</div>
                    <div class="info-frame col-lg-3">{{ user.birthCity }}</div>
                    <div class="info-frame col-lg-3">{{ user.personId }}</div>
                    <div class="info-frame col-lg-10">{{ user.address }}</div>
                    <div class="info-frame col-lg-3">{{ user.citizenship }}</div>
                    <div class=" d-flex" style="margin-right: 20px">
                        <div class="info-frame">M</div>
                        <div class="info-frame">F</div>
                    </div>
                </div>
                <div class="separator">Profesní údaje</div>
                <div class="d-lg-flex flex-wrap justify-content-center">
                    <div class="info-frame col-lg-5">{{ user.designationOfProfessionalCompetence }}</div>
                    <div class="info-frame col-lg-5">{{ user.specializedCompetency }}</div>
                    <div class="info-frame col-lg-11">{{ user.specialProfessionalOrSpecialSpecializedCompetencies }}</div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}