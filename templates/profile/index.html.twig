{% extends "base.html.twig" %}
{% block title %}Profil - {{ parent() }} {% endblock %}
{% block body %}
    <div class="d-lg-flex justify-content-around col-lg-11 mx-auto">
        <div class="col-lg-2">
            <div class="photo-box" style="background-image: url('https://i.redd.it/s6zoxmbnq4b61.jpg')"></div>

            <div class="m-top">
                {% if isManager %}
                    <a href="{{ path('app_employer_delete',{"id":user.id} )}}">
                        <button class="btn btn-danger w-100">Smazat</button>
                    </a>
                {% else %}
                    <a href="{{ path("app_profile_edit") }}">
                        <button class="profile_button w-100 separator">Upravit</button>
                    </a>
                {% endif %}
            </div>
        </div>
        <div class="col-lg-9 d-lg-flex justify-content-between">
            <div class="col-lg-12">
                <div class="separator">Osobní údaje</div>
                <div class="d-lg-flex flex-wrap">
                    <div class="info-frame col-lg-4" title="Jméno">
                        <div>{{ user.name }}</div>
                    </div>
                    <div class="info-frame col-lg-4" title="Příjmení">
                        <div>{{ user.surname }}</div>
                    </div>
                    <div class="info-frame col-lg-4" title="Titul">
                        <div>{{ user.degree }}</div>
                    </div>
                    <div class="info-frame col-lg-4" title="Datum narození">
                        <div>{{ user.birthday|date('d. m. Y') }}</div>
                    </div>
                    <div class="info-frame col-lg-4" title="Místo narození">
                        <div>{{ user.birthCity }}</div>
                    </div>
                    <div class="info-frame col-lg-4" title="Rodné číslo">
                        <div>{{ user.personId }}</div>
                    </div>
                    <div class="info-frame col-lg-12" title="Adresa">
                        <div>{{ user.address }}</div>
                    </div>
                    <div class="info-frame col-lg-3" title="Národnost">
                        <div>{{ user.citizenship }}</div>
                    </div>
                    <div class=" d-flex" style="margin-right: 20px"  title="Pohlaví">
                        <div class="info-frame">
                            <div>{{ (user.gender == "male") ? "Muž" : "Žena" }}</div>
                        </div>
                    </div>
                </div>
                <div class="separator">Profesní údaje</div>
                <div class="d-lg-flex flex-wrap">
                    <div class="info-frame col-lg-6">
                        <div>{{ user.designationOfProfessionalCompetence }}</div>
                    </div>
                    <div class="info-frame col-lg-6">
                        <div>{{ user.specializedCompetency }}</div>
                    </div>
                    <div class="info-frame col-lg-6">
                        <div>{{ user.specialProfessionalOrSpecialSpecializedCompetencies }}</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}