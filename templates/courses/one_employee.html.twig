{% extends 'base.html.twig' %}

{% block title %}
    Adoptovaný kurz - {{ parent() }}
{% endblock %}
{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-lg-4">
                <div class="card" style="width: 18rem;">
                    <div class="card-body">
                        <h5 class="card-title">
                            Kurz
                        </h5>
                        <p class="card-text">
                        <div>
                            <input type="hidden" name="action" value="edit_course"/>

                            <div class="mb-3">
                                <label class="form-label">
                                    Id
                                </label>
                                <input type="text" class="form-control" disabled value="{{ course.id }}"></div>
                            <div class="mb-3">
                                <label class="form-label">
                                    Jméno
                                </label>
                                <input type="text" class="form-control" name="name" disabled value="{{ course.name }}">
                            </div>
                            <div class="mb-3">
                                <label class="form-label">
                                    Klíčová slova
                                </label>
                                <input type="text" class="form-control" disabled name="keywords"
                                       value="{{ course.keywords }}"></div>
                            <div class="mb-3">
                                <label class="form-label">
                                    Specializace
                                </label>
                                <input type="text" class="form-control" disabled name="specialization"
                                       value="{{ course.specialization }}"></div>
                            <div class="mb-3">
                                <label class="form-label">
                                    Zaměření
                                </label>
                                <input type="text" class="form-control" disabled name="focus"
                                       value="{{ course.focus }}"></div>

                        </div>
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-body">
                        <h3 class="text-center">Otevřené termíny</h3>
                        {% set appointments = employer_course.filteredAppointments(false) %}
                        {% set _csrf = csrf_token("join-appointment") %}
                        {% if appointments|length > 0 %}
                        <table class="table text-center">
                            <thead class="">
                            <th>Datum</th>
                            <th>Místo</th>
                            <th>Kapacita</th>
                            <th>Akce</th>
                            </thead>
                            <tbody>
                            {% for appointment in appointments %}
                            <tr>
                                {% set amount = appointment.courseRegistrations|length %}
                                <td>{{ appointment.date|date("d. m. Y H:i") }}</td>
                                <td>{{ appointment.place }}</td>
                                <td>{{ amount }}/{{ appointment.capacity }}</td>
                                <td>
                                    {% if amount < appointment.capacity %}
                                        <form method="POST">
                                            <input type="hidden" name="_appointment_id" value="{{ appointment.id }}">
                                            <input type="hidden" name="_csrf" value="{{ _csrf }}">
                                            <input type="submit" class="btn btn-primary" value="Zapsat se" name="_submit">
                                        </form>
                                    {% endif %}
                                </td>
                            </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                        {% else %}
                            <b>Žádné otevřené termíny</b>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
